3)
nombre = input("Por favor, ingrese su nombre: ")
apellido = input("Por favor, ingrese su apellido: ")
edad = input("Por favor, ingrese su edad: ")
residencia = input("Por favor, ingrese su lugar de residencia: ")
print(f"Hola, soy {nombre} {apellido} tengo {edad} años y vivo en {residencia}")

4)
import math
radio = int(input("Por favor, ingrese el radio del circulo: "))
area = math.pi * radio ** 2
perimetro = 2 * math.pi * radio
input(f"el area del ciruclo es {area} y el perimetro es {perimetro}")

5)
segundos = int(input("Por favor, escriba una cantidad de segundos: "))
horas = segundos // 3600
print("la cantidad de horas a los que equivalen esos segundos es de: ", horas)

6)
numero = int(input("Por favor, digite un numero: "))
for i in range(1, 11, 1):
print(numero * i)

7)
num1 = int(input("Por favor, ingrese un numero distinto de cero: "))
while num1 == 0:
    num1 = int(input("Por favor, ingrese un numero distinto de cero: "))

num2 = int(input("Por favor, ingrese un segundo numero distinto de cero: "))
while num2 == 0:
    num2 = int(input("Por favor, ingrese un segundo numero distinto de cero: "))

sumado = num1 + num2
restado = num1 - num2
multiplicado = num1 * num2
dividido = num1 / num2

print("Sus números sumados: ", sumado)
print("Sus números restados: ", restado)
print("Sus números multiplicados: ", multiplicado)
print("Sus números divididos: ", dividido)

8)
print("bienvenido, vamos a calcular tu indice de masa corporal")
altura = float(input("Por favor, ingrese su altura en metros: "))
peso = float(input("Por favor, ingrese su peso en kg: "))
imc = peso / (altura ** 2)
print("Su indice de masa corporal es de: ", imc)

9)
celsius = float(input("Por favor, ingrese una temperatura en grados Celsius: "))
fahrenheit = 9/5 * celsius + 32
print("El equivalente a fahrenheit es: ", fahrenheit)

10)
num1 = int(input("Por favor, ingrese el primer número: "))
num2 = int(input("Por favor, ingrese el segundo número: "))
num3 = int(input("Por favor, ingrese el tercer número: "))
promedio = (num1 + num2 + num3) / 3
print("El promedio de los numeros dados es de: ", promedio)
